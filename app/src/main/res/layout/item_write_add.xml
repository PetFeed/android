<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="head"
            type="String" />

        <import type="android.view.ViewGroup.LayoutParams" />
    </data>

    <com.loopeer.shadow.ShadowView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:cornerRadius="4dp"
        app:shadowColor="#26000000"
        app:shadowDx="4"
        app:shadowDy="4"
        app:shadowMarginBottom="8dp"
        app:shadowMarginRight="8dp"
        app:shadowRadius="8dp">

        <com.petfeed.petfeed.view.RoundLayout
            android:id="@+id/imageContainer"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:radius="4dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add"
                android:tint="@color/brown1" />
        </com.petfeed.petfeed.view.RoundLayout>
    </com.loopeer.shadow.ShadowView>
</layout>