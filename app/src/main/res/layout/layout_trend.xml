<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.shadow.ShadowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="136dp"
    android:layout_height="152dp"
    app:backgroundColor="@android:color/transparent"
    app:shadowColor="#26000000"
    app:shadowDx="4"
    app:shadowDy="4"
    app:shadowMarginBottom="8dp"
    app:shadowMarginRight="8dp"
    app:shadowRadius="16dp">

    <com.petfeed.petfeed.view.RoundLayout
        android:layout_width="128dp"
        android:layout_height="144dp"
        android:background="@android:color/transparent"
        app:radius="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="128dp"
            android:layout_height="144dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/tag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:textColor="#ffffff"
                android:textSize="12sp"
                tools:text="#골든 리트리버" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_regular"
                    android:text="Photoed by "
                    android:textColor="@android:color/white"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_extra_bold"
                    tools:text="인절미"
                    android:textColor="@android:color/white"
                    android:textSize="6sp" />
            </LinearLayout>
        </LinearLayout>
    </com.petfeed.petfeed.view.RoundLayout>
</com.loopeer.shadow.ShadowView>