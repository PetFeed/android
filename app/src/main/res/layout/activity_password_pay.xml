<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PasswordPayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nanum_square_round_extra_bold"
        android:gravity="center_horizontal"
        android:text="결제 비밀번호 설정"
        android:textColor="@color/black2"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanum_square_round_regular"
        android:gravity="center_horizontal"
        android:text="6자리 숫자를 설정할 수 있습니다."
        android:textColor="@color/black1_30"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/num1"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp"/>

        <ImageView
            android:id="@+id/num2"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp" />


        <ImageView
            android:id="@+id/num3"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp"/>

        <ImageView
            android:id="@+id/num4"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp"/>

        <ImageView
            android:id="@+id/num5"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp"/>

        <ImageView
            android:id="@+id/num6"
            android:layout_width="42dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white1_soild_brown1_stroke_radius4dp"
            android:paddingBottom="24dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="24dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/key1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/key5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/key9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/key11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center"
                android:textColor="@color/brown1"
                android:textSize="28sp" />

            <FrameLayout
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_solid_grey3_stroke">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_backspace" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>