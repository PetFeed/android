<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InfoSettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalHorizontalMargin"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nanum_square_round_extra_bold"
        android:text="정보"
        android:textColor="@color/black2"
        android:textSize="24sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nanum_square_round_bold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1sp"
                android:text="2018 STA+C 생활부문 출품작"
                android:textColor="@color/black1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:gravity="center_horizontal"
                android:text="CEO - Chief Executive Officer"
                android:textColor="@color/brown1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center_horizontal"
                android:text="선린인터넷고등학교 3학년 박태준"
                android:textColor="@color/brown1"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:gravity="center_horizontal"
                android:text="CTO - Chief Technical Officer"
                android:textColor="@color/brown1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center_horizontal"
                android:text="선린인터넷고등학교 3학년 윤영채"
                android:textColor="@color/brown1"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:gravity="center_horizontal"
                android:text="CDO - Chief Design Officer"
                android:textColor="@color/brown1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center_horizontal"
                android:text="선린인터넷고등학교 2학년 김진원"
                android:textColor="@color/brown1"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:gravity="center_horizontal"
                android:text="Android Developer"
                android:textColor="@color/brown1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center_horizontal"
                android:text="선린인터넷고등학교 2학년 나인채"
                android:textColor="@color/brown1"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:gravity="center_horizontal"
                android:text="iOS Developer"
                android:textColor="@color/brown1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_regular"
                android:gravity="center_horizontal"
                android:text="선린인터넷고등학교 1학년 이창현"
                android:textColor="@color/brown1"
                android:textSize="10sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>