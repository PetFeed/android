<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/box_primary_stroke_radius4dp"
        android:fontFamily="@font/nanum_square_round_bold"
        android:hint="아이디"
        android:padding="16dp"
        android:textColor="@color/textBlack"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_primary_stroke_radius4dp"
        android:fontFamily="@font/nanum_square_round_bold"
        android:hint="비밀번호"
        android:padding="16dp"
        android:textColor="@color/textBlack"
        android:textSize="14sp" />

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        app:cornerRadius="4dp"
        app:shadowColor="#26000000"
        app:shadowDx="4"
        app:shadowDy="4"
        app:shadowMarginBottom="8dp"
        app:shadowMarginRight="8dp"
        app:shadowRadius="8dp">

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_primary_solid_radius4dp"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </com.loopeer.shadow.ShadowView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_regular"
            android:gravity="center"
            android:text="계정이 없으신가요? "
            android:textColor="@color/textBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:gravity="center"
            android:text="회원가입 하기"
            android:textColor="@color/textBlack"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>