<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.petfeed.petfeed.activity.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_typo"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edit_id"
        style="@style/input_box_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:hint="아이디"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_password"
        style="@style/input_box_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:hint="비밀번호"
        android:inputType="textPassword" />

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="4dp"
        app:shadowColor="#26000000"
        app:shadowDx="4"
        app:shadowDy="4"
        app:shadowMarginBottom="8dp"
        app:shadowMarginRight="8dp"
        app:shadowRadius="8dp">

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/brown1_solid_radius_4dp"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </com.loopeer.shadow.ShadowView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_find_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:gravity="center"
            android:text="아이디, "
            android:textColor="@color/black1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_find_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:gravity="center"
            android:text="비밀번호 "
            android:textColor="@color/black1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_regular"
            android:gravity="center"
            android:text="찾기"
            android:textColor="@color/black1"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/brown1" />

    <LinearLayout
        android:id="@+id/container_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_regular"
            android:gravity="center"
            android:text="계정이 없으신가요? "
            android:textColor="@color/black1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:gravity="center"
            android:text="회원가입 하기"
            android:textColor="@color/black1"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>