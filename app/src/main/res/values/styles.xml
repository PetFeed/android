<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brown1</item>
        <item name="colorPrimaryDark">@color/white2</item>
        <item name="colorAccent">@color/brown1</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/brown1</item>
    </style>

    <style name="ToolBarItemWhite" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="RegisterInput">
        <item name="colorControlNormal">@color/brown1</item>
        <item name="colorControlActivated">@color/brown1</item>
        <item name="colorControlHighlight">@color/brown1</item>
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textColorHint">@color/black1_30</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="InputBox">
        <item name="android:background">@drawable/white1_soild_brown1_stroke_radius4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
        <item name="android:textColorHint">@color/black1_30</item>
    </style>

    <style name="BigTitle">
        <item name="android:fontFamily">@font/nanum_square_round_extra_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black1</item>
    </style>

    <style name="FeedContent">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/black1</item>
    </style>

    <style name="CardNumber">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MarketPrice">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <!--<item name="android:textColor">@color/PetFeed_Emphasize</item>-->
    </style>

    <style name="Bold">
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_square_round_extra_bold</item>
    </style>

    <style name="DrawerMenu">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black1</item>
    </style>

    <style name="TermTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/black1</item>
    </style>
</resources>
