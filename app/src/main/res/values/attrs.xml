<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedRecyclerView">
        <attr name="top_radius" format="dimension" />
        <attr name="top_height" format="dimension" />
        <attr name="child_alpha" format="float" />
        <attr name="inner_color" format="color" />
        <attr name="back_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="RoundLayout">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="outerColor" format="color" />
    </declare-styleable>
    <declare-styleable name="TrendView">
        <attr name="img" format="reference|integer" />
        <attr name="tag" format="string" />
        <attr name="user" format="string" />
    </declare-styleable>
    <declare-styleable name="TrendRankView">
        <attr name="rank" format="string" />
        <attr name="title" format="string" />
        <attr name="count" format="string" />
    </declare-styleable>
    <declare-styleable name="FeedGridView">
        <attr name="distance" format="dimension" />
        <attr name="fontSize" format="dimension" />
    </declare-styleable>
</resources>